{
  "name": "@clarus-vitae/database",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types.ts",
    "./sanity": "./src/sanity/index.ts"
  },
  "scripts": {
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "search:init": "tsx scripts/search-init.ts",
    "search:reindex": "tsx scripts/search-reindex.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@clarus-vitae/types": "workspace:*",
    "@portabletext/types": "^2.0.13",
    "@prisma/client": "^5.9.0",
    "@sanity/client": "^6.15.0",
    "@sanity/image-url": "^1.0.2",
    "meilisearch": "^0.37.0",
    "server-only": "^0.0.1"
  },
  "devDependencies": {
    "@clarus-vitae/config": "workspace:*",
    "prisma": "^5.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
