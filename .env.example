# ===========================================
# Clarus Vitae - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# Analytics (Plausible - privacy-first)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="clarusvitae.com"
PLAUSIBLE_API_KEY=""

# Email (Resend)
RESEND_API_KEY=""

# Search (Meilisearch - self-hosted for privacy)
# Start Meilisearch with: docker-compose up -d meilisearch
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_MASTER_KEY="your-secure-master-key-change-in-production"

# CMS (Sanity)
NEXT_PUBLIC_SANITY_PROJECT_ID=""
NEXT_PUBLIC_SANITY_DATASET="production"
SANITY_API_TOKEN=""

# Sanity Studio (for apps/cms)
SANITY_STUDIO_PROJECT_ID=""
SANITY_STUDIO_DATASET="production"
SANITY_STUDIO_PREVIEW_URL="http://localhost:3000"

# Feature Flags
NEXT_PUBLIC_ENABLE_RESEARCH_MODE="true"
NEXT_PUBLIC_ENABLE_SECURE_INQUIRY="true"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Clarus Vitae"

# Security
ENCRYPTION_KEY=""
